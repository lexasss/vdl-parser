<Window x:Class="VdlParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VdlParser"
        mc:Ignorable="d"
        Title="VDL file parser"
        Height="450" Width="1200"
        Icon="/Assets/images/icon.png">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        <Style x:Key="VdlHeader" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="VdlSubHeader" TargetType="Label">
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style x:Key="PdHeader" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <DataTemplate x:Key="VdlItem" DataType="local:Vdl">
            <Border BorderThickness="1"
                    BorderBrush="Gray">
                <StackPanel Background="#FFEDEDED">
                    <Label Style="{StaticResource VdlHeader}"
                           Content="{Binding Name}"/>
                    <Label Style="{StaticResource VdlSubHeader}"
                           Content="{Binding RecordCount}"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="VdlSelectedItem" DataType="local:Vdl">
            <Border BorderThickness="1"
                    BorderBrush="Gray">
                <StackPanel Background="#FFEDEDFF">
                    <Label Style="{StaticResource VdlHeader}"
                           Content="{Binding Name}"/>
                    <Label Style="{StaticResource VdlSubHeader}"
                           Content="{Binding RecordCount}"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <Style TargetType="{x:Type ListBoxItem}" x:Key="VdlListContainer">
            <Setter Property="ContentTemplate" Value="{StaticResource VdlItem}" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="ContentTemplate" Value="{StaticResource VdlSelectedItem}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0"
                     DataContext="{Binding Controller}"
                     ItemsSource="{Binding Vdls}"
                     ItemContainerStyle="{StaticResource VdlListContainer}" SelectionChanged="ListBox_SelectionChanged"/>

            <Button Grid.Row="1"
                Content="Load..."
                Click="OpenButton_Click"/>
        </Grid>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:Graph x:Name="plot"
                         Grid.Column="1"/>
        </Grid>

        <Border Grid.Column="2"
                BorderThickness="1,0,0,0"
                BorderBrush="Gray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0">
                    <Grid DataContext="{Binding Path=Controller.HandPeakDetector, Mode=OneTime}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.ColumnSpan="2"
                               Style="{StaticResource PdHeader}"
                               Content="Hand peak detector"/>
                        <Label Grid.Row="1" Grid.Column="0"
                               Content="Buffer size"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding BufferSize, Mode=OneWay}"/>
                        <Label Grid.Row="2" Grid.Column="0"
                               Content="Change threshold"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding PeakThreshold, Mode=OneWay}"/>
                        <Label Grid.Row="3" Grid.Column="0"
                               Content="Ignorance threhold"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding IgnoranceThrehold, Mode=OneWay}"/>
                        <Label Grid.Row="4" Grid.Column="0"
                               Content="Max peak duration"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding MaxPeakDuration, Mode=OneWay}"/>
                    </Grid>

                    <Separator Margin="2,12"/>
            
                    <Grid DataContext="{Binding Path=Controller.GazePeakDetector, Mode=OneTime}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.ColumnSpan="2"
                               Style="{StaticResource PdHeader}"
                               Content="Gaze peak detector"/>
                        <Label Grid.Row="1" Grid.Column="0"
                               Content="Buffer size"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding BufferSize, Mode=OneWay}"/>
                        <Label Grid.Row="2" Grid.Column="0"
                               Content="Change threshold"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding PeakThreshold, Mode=OneWay}"/>
                        <Label Grid.Row="3" Grid.Column="0"
                               Content="Max peak duration"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding MaxPeakDuration, Mode=OneWay}"/>
                    </Grid>
                </StackPanel>

                <Button Grid.Row="1"
                        Content="Apply" Click="ApplyPeakDetector_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
