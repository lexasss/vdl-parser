<Window x:Class="VdlParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:VdlParser"
        mc:Ignorable="d"
        Title="VDL file parser"
        Height="480" Width="1200"
        Icon="/Assets/images/icon.png"
        Closed="Window_Closed">

    <Window.Resources>
        <local:ObjectToBoolConverter x:Key="obj2bool"/>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
        <Style x:Key="VdlHeader" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="VdlSubHeader" TargetType="Label">
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style x:Key="PdHeader" TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <DataTemplate x:Key="VdlItem" DataType="local:Vdl">
            <Border BorderThickness="1"
                    BorderBrush="Gray">
                <StackPanel Background="#FFEDEDED">
                    <Label Style="{StaticResource VdlHeader}"
                           Content="{Binding Name}"/>
                    <Label Style="{StaticResource VdlSubHeader}"
                           Content="{Binding RecordCount}"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="VdlSelectedItem" DataType="local:Vdl">
            <Border BorderThickness="1"
                    BorderBrush="Gray">
                <StackPanel Background="#FFEDEDFF">
                    <Label Style="{StaticResource VdlHeader}"
                           Content="{Binding Name}"/>
                    <Label Style="{StaticResource VdlSubHeader}"
                           Content="{Binding RecordCount}"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <Style TargetType="{x:Type ListBoxItem}" x:Key="VdlListContainer">
            <Setter Property="ContentTemplate" Value="{StaticResource VdlItem}" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="ContentTemplate" Value="{StaticResource VdlSelectedItem}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <ObjectDataProvider x:Key="FingerProvider"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:Finger"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="GazeDimensionProvider"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:GazeRotation"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="lsbVdls" Grid.Row="0"
                     DataContext="{Binding Controller}"
                     ItemsSource="{Binding Vdls}"
                     ItemContainerStyle="{StaticResource VdlListContainer}" SelectionChanged="VdlsListBox_SelectionChanged"/>

            <Button Grid.Row="1"
                Content="Load..."
                Click="OpenButton_Click"/>
        </Grid>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:Graph x:Name="plot"
                         Grid.Row="0"/>
            <TextBox x:Name="txbSummary"
                     Grid.Row="1"/>
        </Grid>

        <Border Grid.Column="2"
                BorderThickness="1,0,0,0"
                BorderBrush="Gray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Margin="4">
                    <Grid DataContext="{Binding Path=Controller.HandPeakDetector, Mode=OneTime}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.ColumnSpan="2"
                               Style="{StaticResource PdHeader}"
                               Content="Hand peak detector"/>
                        <Label Grid.Row="1" Grid.Column="0"
                               Content="Buffer size"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding BufferSize, Mode=TwoWay}"/>
                        <Label Grid.Row="2" Grid.Column="0"
                               Content="Change threshold"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding PeakThreshold, Mode=TwoWay}"/>
                        <Label Grid.Row="3" Grid.Column="0"
                               Content="Max peak duration"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding MaxPeakDuration, Mode=TwoWay}"/>
                        <Label Grid.Row="4" Grid.Column="0"
                               Content="Min inter-peak interval"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding MinInterPeakInterval, Mode=TwoWay}"/>
                        <Label Grid.Row="5" Grid.Column="0"
                               Content="Data source"/>
                    </Grid>
                    <ComboBox DataContext="{Binding Controller}"
                              ItemsSource="{Binding Source={StaticResource FingerProvider}}"
                              SelectedItem="{Binding Finger, Mode=TwoWay}"
                              Margin="6,0,0,0"
                              SelectionChanged="PeakDetectorDataSource_SelectionChanged"/>

                    <Separator Margin="2,12"/>

                    <Grid DataContext="{Binding Path=Controller.GazePeakDetector, Mode=OneTime}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.ColumnSpan="2"
                               Style="{StaticResource PdHeader}"
                               Content="Gaze peak detector"/>
                        <Label Grid.Row="1" Grid.Column="0"
                               Content="Buffer size"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding BufferSize, Mode=TwoWay}"/>
                        <Label Grid.Row="2" Grid.Column="0"
                               Content="Change threshold"/>
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding PeakThreshold, Mode=TwoWay}"/>
                        <Label Grid.Row="3" Grid.Column="0"
                               Content="Max peak duration"/>
                        <TextBox Grid.Row="3" Grid.Column="1"
                                 Text="{Binding MaxPeakDuration, Mode=TwoWay}"/>
                        <Label Grid.Row="4" Grid.Column="0"
                               Content="Min inter-peak interval"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding MinInterPeakInterval, Mode=TwoWay}"/>
                        <Label Grid.Row="5" Grid.Column="0"
                               Content="Data source"/>
                    </Grid>
                    <ComboBox DataContext="{Binding Controller}"
                              ItemsSource="{Binding Source={StaticResource GazeDimensionProvider}}"
                              SelectedItem="{Binding GazeRotation, Mode=TwoWay}"
                              Margin="6,0,0,0"
                              SelectionChanged="PeakDetectorDataSource_SelectionChanged"/>
                </StackPanel>

                <Button Grid.Row="1"
                        DataContext="{Binding Controller}"
                        IsEnabled="{Binding SelectedItem, ElementName=lsbVdls, Converter={StaticResource obj2bool}}"
                        Content="Apply"
                        Click="ApplyPeakDetector_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
